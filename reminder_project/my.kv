<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols: 1
        FloatLayout:
            size: root.width, root.height/2
            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                color: (0, 0, 0, 1)
                pos_hint: {"x": 0.1, "top": 1}
                font_size: (root.width**2 + root.height**2) / 14**4
            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x": 0, "top": 0.8}
                color: (0, 0, 0, 1)
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4
            TextInput:
                pos_hint: {"x": 0.4, "top": 0.8}
                size_hint: 0.5, 0.12
                id: namee
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x": 0, "top": 0.8-0.13}
                color: (0, 0, 0, 1)
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x": 0.4, "top": 0.8-0.13}
                size_hint: 0.5, 0.12
                id: email
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x": 0, "top": 0.8-0.13*2}
                color: (0, 0, 0, 1)
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x": 0.4, "top": 0.8-0.13*2}
                size_hint: 0.5, 0.12
                id: passw
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint: {"x": 0.3, "y": 0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Already have an Account? Log In"
            font_size: "20sp"
            on_release:
                root.manager.transition.direction = "left"
                root.login()
        Button:
            pos_hint: {"x": 0.2, "y": 0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: "40sp"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<CustLabel@Label>:
    color: .761, .190, .810, 1

<ChooseInterests>:
    name: "choose"
    orientation: "vertical"
    padding: 10
    spacing: 10

    CustLabel:
        text: "Gender"
        size_hint_x: 1
        font_size:20

    # creating box layout
    BoxLayout:
        # assigning orentation
        orientation: "horizontal"
        height: 20

        BoxLayout:
            orientation: "horizontal"
            size_hint_x: .22

            # label creation
            CustLabel:
                text: "Male"
                size_hint_x: .80
                font_size:30
            CheckBox:
                color:.294, .761, .623
                on_active: root.checkbox_click(self, self.active)
                size_hint_x: .20

            CustLabel:
                text: "Female"
                size_hint_x: .80
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active)
                size_hint_x: .20

            CustLabel:
                text: "Other"
                size_hint_x: .80
                font_size:10
            CheckBox:
                on_active: root.checkbox_click(self, self.active)
                size_hint_x: .20

<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:
        Label:
            text: "Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            color: (0, 0, 0, 1)
            pos_hint: {"x": 0.1, "top": 0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top": 0.9}
            size_hint: 0.5, 0.15

        Label:
            text: "Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x": 0.1, "top": 0.7}
            color: (0, 0, 0, 1)
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top": 0.7}
            size_hint: 0.5, 0.15

        Button:
            pos_hint: {"x": 0.2, "y": 0.05}
            size_hint: 0.6, 0.2
            font_hint: (root.width**2 + root.height ** 2) / 13**4
            text: "Login"
            font_size: "40sp"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint: {"x": 0.3, "y": 0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Don't have an Account? Create One"
            font_size: "20sp"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()



<MainWindow>:
    n: n
    email: email
    created: created

    FloatLayout:
        Label:
            id: n
            pos_hint: {"x": 0.1, "top": 0.9}
            size_hint: 0.8, 0.2
            color: (0, 0, 0, 1)
            text: "Account Name: "

        Label:
            id: email
            pos_hint: {"x": 0.1, "top": 0.7}
            size_hint: 0.8, 0.2
            color: (0, 0, 0, 1)
            text: "Email: "

        Label:
            id: created
            pos_hint: {"x": 0.1, "top": 0.5}
            size_hint: 0.8, 0.2
            color: (0, 0, 0, 1)
            text: "Created: "

        Button:
            pos_hint: {"x": 0.2, "y": 0.1}
            size_hint: 0.6, 0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"


<ChatWindow>:
    name: "chat"
    FloatLayout:
        Image:
            source: '789.jpg'
            size_hint: 1, 0.9
            pos_hint: {'x': 0, 'y': 0.1}
            allow_stretch: True
        Button:
            pos_hint: {"x": 0, "y": 0}
            size_hint: 0.25, 0.1
            background_color: (1, 1, 1, 1)
            text: "chat"
            color:0.3, 0.6, 0.7, 1
        Button:
            pos_hint: {"x": 0.25, "y": 0}
            size_hint: 0.25, 0.1
            background_color: (1, 1, 1, 1)
            text: "Contact"
            on_release:
                app.root.current = "contact"
                root.manager.transition.direction = "left"
        Button:
            pos_hint: {"x": 0.50, "y": 0}
            size_hint: 0.25, 0.1
            background_color: (1, 1, 1, 1)
            text: "Discover"
            on_release:
                app.root.current = "discover"
                root.manager.transition.direction = "left"
        Button:
            pos_hint: {"x": 0.75, "y": 0}
            size_hint: 0.25, 0.1
            background_color: (1, 1, 1, 1)
            text: "Me"
            on_release:
                app.root.current = "me"
                root.manager.transition.direction = "left"


